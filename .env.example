# Integration Gateway Environment Configuration
# Copy this file to .env and fill in the values

# Environment - determines which config directory to use
ENVIRONMENT=development

# API Configuration
API_ENDPOINT=http://localhost:8080
MONITORING_ENDPOINT=/metrics
RATE_LIMIT_THRESHOLD=100
MAX_RETRIES=3

# Cloud Configuration
PROJECT_ID=your-project-id
SERVICE_ACCOUNT=your-service-account@your-project-id.iam.gserviceaccount.com
CONFIG_BUCKET_ID=your-config-bucket-id
BACKUP_BUCKET=your-backup-bucket-id
DEPLOYMENT_REGION=us-west1

# Security Configuration
SECRET_MANAGER_PROJECT=your-secret-manager-project-id

# DO NOT add actual secrets to this file - use Secret Manager instead

# Example environment configuration
# Copy this file to .env and fill in the values

# Google Cloud Service Account
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Other configuration
PROJECT_ID=your-project-id
REGION=us-west1

