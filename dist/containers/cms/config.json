{
  "name": "Anthology CMS Integration",
  "version": "1.0.0",
  "description": "CMS integration container for Anthology subscribers",
  "supports": [
    "wordpress",
    "drupal",
    "joomla",
    "shopify",
    "contentful",
    "sanity"
  ],
  "scaling": {
    "resources": {
      "min": {
        "cpu": "250m",
        "memory": "512Mi"
      },
      "recommended": {
        "cpu": "500m",
        "memory": "1Gi"
      },
      "max": {
        "cpu": "2",
        "memory": "4Gi"
      }
    },
    "replicas": {
      "min": 1,
      "max": 10,
      "targetCpuUtilization": 70
    }
  },
  "access_control": {
    "required_roles": ["anthology-cms-manager", "anthology-publisher"],
    "permissions": [
      "content:read",
      "content:write",
      "cms:connect",
      "cms:publish"
    ]
  },
  "endpoints": {
    "health": "/health",
    "connect": "/api/v1/connect",
    "publish": "/api/v1/publish",
    "sync": "/api/v1/sync",
    "status": "/api/v1/status"
  },
  "authentication": {
    "methods": ["api_key", "oauth2"],
    "required_secrets": ["anthology-api-key", "cms-credentials"]
  },
  "monitoring": {
    "metrics_endpoint": "/metrics",
    "log_level": "info",
    "tracing_enabled": true
  },
  "rate_limits": {
    "individual": 50,
    "business": 200,
    "enterprise": 1000
  }
}
