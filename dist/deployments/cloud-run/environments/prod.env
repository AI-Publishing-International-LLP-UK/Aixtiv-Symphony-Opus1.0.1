# Production environment variables
export NODE_ENV="production"
export LOG_LEVEL="info"
export PORT="8080"

# Application configuration
export JWT_SECRET="change-this-to-a-secure-secret-in-secret-manager"
export JWT_EXPIRATION="24h"
export RATE_LIMIT_WINDOW_MS="900000"
export RATE_LIMIT_MAX_REQUESTS="100"

# Service integration URLs
export AUTH_SERVICE_URL="https://auth-service.example.com"
export AGENTS_SERVICE_URL="https://agents-service.example.com"

# Database configuration
export DB_HOST="your-prod-db-host"
export DB_PORT="5432"
export DB_NAME="integration_gateway_prod"
export DB_USER="integration_gateway_user"
export DB_PASSWORD="use-secret-manager-reference-here"

# Additional configuration
export CACHE_TTL="3600"
export MAX_PAYLOAD_SIZE="10mb"
export ENABLE_SWAGGER="false"

