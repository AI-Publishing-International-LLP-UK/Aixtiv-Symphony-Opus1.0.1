{
  "providers": {
    "github": {
      "name": "GitHub",
      "primary": true,
      "secret_key_patterns": ["github", "gh_token"],
      "env_prefix": "GITHUB",
      "auth_types": ["oauth", "pat", "app"],
      "integration_points": ["source_control", "ci_cd", "issues", "packages"]
    },
    "atlassian": {
      "name": "Atlassian",
      "products": ["jira", "confluence", "bitbucket"],
      "secret_key_patterns": ["atlassian", "jira", "confluence", "bitbucket"],
      "env_prefix": "ATLASSIAN",
      "auth_types": ["api_token", "oauth"]
    },
    "gitlab": {
      "name": "GitLab",
      "secondary": true,
      "secret_key_patterns": ["gitlab"],
      "env_prefix": "GITLAB",
      "auth_types": ["oauth", "pat"]
    },
    "bitbucket": {
      "name": "Bitbucket",
      "secondary": true,
      "environments": ["sandbox", "production"],
      "secret_key_patterns": ["bitbucket"],
      "env_prefix": "BITBUCKET",
      "auth_types": ["oauth", "app_password"]
    },
    "jenkins": {
      "name": "Jenkins",
      "secret_key_patterns": ["jenkins"],
      "env_prefix": "JENKINS",
      "auth_types": ["api_token", "username_password"]
    },
    "openai": {
      "name": "OpenAI",
      "secret_key_patterns": ["openai", "gpt"],
      "env_prefix": "OPENAI",
      "auth_types": ["api_key"]
    },
    "anthropic": {
      "name": "Anthropic",
      "secret_key_patterns": ["anthropic", "claude"],
      "env_prefix": "ANTHROPIC",
      "auth_types": ["api_key"]
    },
    "git_clients": {
      "name": "Git Clients",
      "tools": [
        {
          "name": "GitKraken",
          "secret_key_patterns": ["gitkraken"],
          "env_prefix": "GITKRAKEN"
        },
        {
          "name": "GitLens",
          "secret_key_patterns": ["gitlens"],
          "env_prefix": "GITLENS"
        }
      ]
    },
    "ci_cd": {
      "name": "CI/CD",
      "tools": [
        {
          "name": "GitHub Actions",
          "secret_key_patterns": ["github_actions", "gh_actions"],
          "env_prefix": "GH_ACTIONS"
        },
        {
          "name": "CircleCI",
          "secret_key_patterns": ["circleci"],
          "env_prefix": "CIRCLECI"
        },
        {
          "name": "TravisCI",
          "secret_key_patterns": ["travis"],
          "env_prefix": "TRAVIS"
        }
      ]
    }
  },
  "repositories": {
    "primary_source": "github",
    "workflow": {
      "source_code": "github",
      "issue_tracking": "jira",
      "documentation": "confluence",
      "ci_cd": "github_actions",
      "deployment": "jenkins"
    },
    "repositories": [
      {
        "name": "c2100-pr",
        "provider": "github",
        "url": "https://github.com/C2100-PR/api-for-warp-drive"
      },
      {
        "name": "anthology-ai-publishing",
        "provider": "github",
        "url": "https://github.com/C2100-PR/anthology-ai-publishing"
      }
    ]
  }
}
