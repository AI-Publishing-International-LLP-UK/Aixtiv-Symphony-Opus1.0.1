{
  "tools": {
    "source_control": {
      "primary": "github",
      "tools": [
        {
          "name": "GitHub",
          "secret_patterns": ["github", "gh_token", "gh_pat"],
          "env_prefix": "GITHUB",
          "priority": "primary",
          "config_dir": "github"
        },
        {
          "name": "GitLab",
          "secret_patterns": ["gitlab"],
          "env_prefix": "GITLAB",
          "priority": "secondary",
          "config_dir": "gitlab"
        },
        {
          "name": "Bitbucket",
          "secret_patterns": ["bitbucket"],
          "env_prefix": "BITBUCKET",
          "priority": "secondary",
          "config_dir": "bitbucket"
        }
      ]
    },
    "project_management": {
      "primary": "jira",
      "tools": [
        {
          "name": "Jira",
          "secret_patterns": ["jira", "atlassian"],
          "env_prefix": "JIRA",
          "priority": "primary",
          "config_dir": "jira"
        },
        {
          "name": "Confluence",
          "secret_patterns": ["confluence", "atlassian"],
          "env_prefix": "CONFLUENCE",
          "priority": "secondary",
          "config_dir": "confluence"
        },
        {
          "name": "Trello",
          "secret_patterns": ["trello"],
          "env_prefix": "TRELLO",
          "priority": "secondary",
          "config_dir": "trello"
        }
      ]
    },
    "ci_cd": {
      "primary": "github_actions",
      "tools": [
        {
          "name": "GitHub Actions",
          "secret_patterns": ["github_actions", "gh_actions", "actions"],
          "env_prefix": "GITHUB_ACTIONS",
          "priority": "primary",
          "config_dir": "github-actions"
        },
        {
          "name": "Jenkins",
          "secret_patterns": ["jenkins"],
          "env_prefix": "JENKINS",
          "priority": "secondary",
          "config_dir": "jenkins"
        },
        {
          "name": "CircleCI",
          "secret_patterns": ["circleci", "circle"],
          "env_prefix": "CIRCLECI",
          "priority": "secondary",
          "config_dir": "circleci"
        },
        {
          "name": "TravisCI",
          "secret_patterns": ["travisci", "travis"],
          "env_prefix": "TRAVIS",
          "priority": "secondary",
          "config_dir": "travis"
        }
      ]
    },
    "ai_providers": {
      "primary": "anthropic",
      "tools": [
        {
          "name": "Anthropic",
          "secret_patterns": ["anthropic", "claude"],
          "env_prefix": "ANTHROPIC",
          "priority": "primary",
          "config_dir": "anthropic"
        },
        {
          "name": "OpenAI",
          "secret_patterns": ["openai", "gpt"],
          "env_prefix": "OPENAI",
          "priority": "secondary",
          "config_dir": "openai"
        },
        {
          "name": "Cohere",
          "secret_patterns": ["cohere"],
          "env_prefix": "COHERE",
          "priority": "secondary",
          "config_dir": "cohere"
        }
      ]
    },
    "git_tools": {
      "primary": "gitkraken",
      "tools": [
        {
          "name": "GitKraken",
          "secret_patterns": ["gitkraken", "kraken"],
          "env_prefix": "GITKRAKEN",
          "priority": "primary",
          "config_dir": "gitkraken"
        },
        {
          "name": "GitLens",
          "secret_patterns": ["gitlens", "lens"],
          "env_prefix": "GITLENS",
          "priority": "secondary",
          "config_dir": "gitlens"
        }
      ]
    },
    "code_management": {
      "primary": "github",
      "tools": [
        {
          "name": "GitHub",
          "modules": ["repositories", "code_reviews", "packages"],
          "env_prefix": "GITHUB",
          "priority": "primary"
        },
        {
          "name": "GitLab",
          "modules": ["repositories", "code_reviews", "packages"],
          "env_prefix": "GITLAB",
          "priority": "secondary"
        }
      ]
    }
  },
  "repositories": [
    {
      "name": "C2100-PR/api-for-warp-drive",
      "provider": "github",
      "url": "https://github.com/C2100-PR/api-for-warp-drive",
      "primary": true
    },
    {
      "name": "C2100-PR/aixtiv-symphony",
      "provider": "github",
      "url": "https://github.com/C2100-PR/aixtiv-symphony",
      "primary": true
    },
    {
      "name": "C2100-PR/ai-deployment",
      "provider": "github",
      "url": "https://github.com/C2100-PR/ai-deployment",
      "primary": true
    }
  ],
  "workflows": {
    "code_flow": {
      "source": "github",
      "ci": "github_actions",
      "deployment": "jenkins",
      "approval": "jira"
    },
    "documentation_flow": {
      "source": "github",
      "wiki": "confluence",
      "api_docs": "github_pages"
    }
  }
}
