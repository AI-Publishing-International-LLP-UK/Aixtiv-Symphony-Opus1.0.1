{
  "name": "integration-gateway",
  "version": "1.0.0",
  "description": "Integration Gateway Service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "test:integration": "newman run ./tests/postman/ASOOS_API_Postman_Collection.json",
    "test:agents": "jest --config jest.config.js ./tests/agents",
    "test:api": "newman run ./tests/postman/ASOOS_API_Postman_Collection.json --environment ./tests/postman/environment.json",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run lint"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "newman": "^6.2.1",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "overrides": {
    "jose": "6.0.10",
    "postman-collection": {
      "@faker-js/faker": "^7.6.0"
    },
    "jsonwebtoken": {
      "uuid": "^9.0.1"
    },
    "swagger-ui-express": {
      "uuid": "^9.0.1"
    }
  }
}
