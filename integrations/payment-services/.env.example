# ASOOS Payment Services Integration - Environment Variables Template
# DO NOT STORE ACTUAL CREDENTIALS HERE - FOR REFERENCE ONLY

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_API_VERSION=2025-01-01

# Xero Configuration
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=https://asoos-2100-com.firebaseapp.com/auth/xero/callback
XERO_SCOPES=accounting.transactions,accounting.contacts,accounting.settings
XERO_TENANT_ID=your_xero_tenant_id

# PandaDoc Configuration
PANDADOC_API_KEY=your_pandadoc_api_key
PANDADOC_CLIENT_ID=your_pandadoc_client_id
PANDADOC_CLIENT_SECRET=your_pandadoc_client_secret
PANDADOC_API_URL=https://api.pandadoc.com/v1
PANDADOC_WEBHOOK_SECRET=your_pandadoc_webhook_secret

# FMS (Flight Memory System) Integration
FMS_API_ENDPOINT=https://api.asoos-2100-com.firebaseapp.com/fms
FMS_AUDIT_LOG_ENABLED=true

# Security Settings
PAYMENT_GATEWAY_ENCRYPTION_KEY=your_encryption_key
TOKEN_VERIFICATION_SECRET=your_verification_secret
SALLYPORT_AUTH_ENDPOINT=https://api.asoos-2100-com.firebaseapp.com/auth

# Logging and Monitoring
LOG_LEVEL=info
MONITORING_ENABLED=true
ALERT_EMAIL=alerts@asoos-2100-com.firebaseapp.com

