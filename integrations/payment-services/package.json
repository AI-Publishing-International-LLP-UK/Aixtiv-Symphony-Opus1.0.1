{
  "name": "asoos-payment-services",
  "version": "1.0.1",
  "description": "Aixtiv Symphony Payment Services Integration Gateway",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "build": "npm run lint && npm run test",
    "deploy": "gcloud run deploy payment-services-gateway --source .",
    "deploy:prod": "npm run build && npm run deploy",
    "secrets:setup": "node ./scripts/setup-secrets.js",
    "webhooks:register": "node ./scripts/register-webhooks.js",
    "stripe:listen": "stripe listen --forward-to localhost:8080/api/webhooks/stripe",
    "docs:generate": "jsdoc -c jsdoc.json",
    "security:audit": "npm audit --production",
    "validate:config": "node ./scripts/validate-config.js",
    "metrics:check": "node ./scripts/check-metrics.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "redis": "^4.6.7",
    "stripe": "^13.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xero-node": "^5.0.0",
    "pandadoc-node-client": "^3.0.1",
    "opentelemetry-js": "^1.13.0",
    "@opentelemetry/auto-instrumentations-node": "^0.38.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.41.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.41.0",
    "@opentelemetry/sdk-metrics": "^1.13.0",
    "@opentelemetry/sdk-node": "^0.41.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.6.2",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6",
    "stripe-cli": "^0.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "coverage/*",
      "dist/*",
      "docs/*"
    ],
    "delay": "1000",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aixtiv/asoos.git",
    "directory": "integration-gateway/integrations/payment-services"
  },
  "keywords": [
    "payment",
    "stripe",
    "xero",
    "pandadoc",
    "gateway",
    "integration",
    "asoos",
    "aixtiv",
    "symphony"
  ],
  "author": "Aixtiv Symphony Team <support@asoos-2100-com.firebaseapp.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/aixtiv/asoos/issues"
  },
  "homepage": "https://github.com/aixtiv/asoos#readme"
}

